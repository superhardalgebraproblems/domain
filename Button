#myButton {
    background-color: #4CAF50; /* Green */
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    text-decoration: none;
    display: inline-block;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 4px;
}

#myButton:hover {
    background-color: #45a049; /* Darker green */
}
document.getElementById("myButton").addEventListener("click", function() {
    alert("Button was clicked!");
});
